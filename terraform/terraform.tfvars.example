# Example Terraform variables file
# Copy this to terraform.tfvars and fill in your actual values
# WARNING: Never commit terraform.tfvars with real credentials!

# Render API key - get from https://dashboard.render.com/account/api-keys
render_api_key = "rnd_YOUR_RENDER_API_KEY_HERE"

# Render Owner ID - find at https://dashboard.render.com/settings
# This is your account ID (starts with usr-) or team ID (starts with tea-)
render_owner_id = "usr-YOUR_OWNER_ID_HERE"

# Service configuration
service_name = "beats-api"
service_plan = "free"  # Options: free, starter, standard, pro
region       = "oregon"  # Options: oregon, frankfurt, singapore, ohio, virginia

# GitHub repository (already set to your repo)
github_repo_url = "https://github.com/lanterno/beats"
github_branch   = "main"

# MongoDB connection string from MongoDB Atlas or other provider
db_dsn = "mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority"

# Database name
db_name = "beats"

# API access token for authentication
access_token = "your-secure-random-token-here"

# Auto-deploy on git push
auto_deploy = true
